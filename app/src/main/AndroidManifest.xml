<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kritika.in.collegeapp">

    <application
        android:name=".ui.activity.CollegeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.SplashScreen" />
        <activity
            android:name=".ui.activity.HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.AttendanceActivity" />
        <activity android:name=".ui.activity.BaseActivity" />
        <activity android:name=".ui.activity.ExamScheduleActivity" />
        <activity
            android:name=".ui.activity.AnnapurnaActivity"
            android:label="@string/title_activity_annapurna"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activity.CGPAMainActivity" />
        <activity
            android:name=".ui.activity.ConnectStoriesActivity"
            android:label="@string/title_activity_connect_stories"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name=".ui.activity.AboutUsActivity"></activity>
    </application>

</manifest>